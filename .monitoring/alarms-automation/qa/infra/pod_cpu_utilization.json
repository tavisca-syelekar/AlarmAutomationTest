{
    "description": "Booking Failure",
    "friendlyName": "Booking Failure",
    "threshold": {
        "value": 60,
        "condition": "gte"
    },
    "resourceType": "eks",
    "metric": {
        "namespace": "containerInsights",
        "name": "pod_cpu_utilization",
        "dimensions": {
            "clusterName": "sample_clustre",
            "eksNamespace": "utilities",
            "podName": "test-pod-1245"
        },
        "aggregate": {
            "type": "Average"
        },
        "period": "300s"
    },
    "evaluationPeriods": 5,
    "treatMissingData": "missing",
    "notifications": {
        "onError": [
            {
                "type": "teams_message",
                "template": "business_fault_failure"
            }
        ],
        "onRecovery": [
            {
                "type": "teams_message",
                "template": "business_fault_recovery"
            }
        ]
    }
}