{
    "description": "alarm-contract-testing-description",
    "friendlyName": "chat ops alarm-contract-testing-description",
    "threshold": {
        "condition": "gte",
        "value": 90.0
    },
    "resourceType": "eks",
    "compositeMetric": {
        "expression": "(m3/m4)*100",
        "metrics": [
            {
                "id": "m3",
                "namespace": "containerInsights",
                "name": "pod_cpu_utilization",
                "dimensions": {
                    "clusterName": "sample_clustre",
                    "eksNamespace": "utilities",
                    "podName": "test-pod-1245"
                },
                "aggregate": {
                    "type": "Average"
                },
                "period": "300s"
            },
            {
                "id": "m4",
                "namespace": "containerInsights",
                "name": "pod_cpu_utilization",
                "dimensions": {
                    "clusterName": "sample_clustre",
                    "eksNamespace": "utilities",
                    "podName": "test-pod-1245"
                },
                "aggregate": {
                    "type": "Average"
                },
                "period": "300s"
            }
        ]
    },
    "evaluationPeriods": 2,
    "treatMissingData": "missing",
    "notifications": {
        "onError": [
            {
                "type": "teams_message",
                "template": "business_fault_failure"
            }
        ],
        "onRecovery": [
            {
                "type": "email_notification",
                "template": "recovery",
                "recipients": [
                    "test1@tavsica.com",
                    "test2@tavsica.com"
                ]
            }
        ]
    }
}