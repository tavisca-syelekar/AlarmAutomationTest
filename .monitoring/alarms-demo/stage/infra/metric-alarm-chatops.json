{
    "description": "Monotono POD CPU utilization",
    "friendlyName": "Monotono POD-cpu-utilizatoin",
    "threshold": {
        "value": 60,
        "condition": "gte"
    },
    "resourceType": "eks",
    "metric": {
        "namespace": "containerInsights",
        "name": "pod_cpu_utilization",
        "dimensions":{
            "ClusterName":"eks-travel-stage",
            "Namespace":"nextgen-monotone",
            "PodName":"nextgen-monotone-nextgen-app-deployment"
        },
        "aggregate": {
            "type": "Average"
        },
        "period": "300s"
    },
    "evaluationPeriods": 5,
    "treatMissingData": "missing",
    "notifications": {
        "onError": [
            {
                "type": "teams_message",
                "template": "business_fault_failure"
            }
        ],
        "onRecovery": [
            {
                "type": "teams_message",
                "template": "business_fault_recovery"
            }
        ]
    }
}