{
    "description": "Monotono POD CPU utilization",
    "friendlyName": "Monotono POD-cpu-utilization",
    "threshold": {
        "value": 60,
        "condition": "gte"
    },
    "resourceType": "eks",
    "metric": {
        "namespace": "ContainerInsights",
        "name": "pod_cpu_utilization",
        "aggregate": {
            "type": "Average"
        },
        "period": "300s"
    },
    "evaluationPeriods": 1,
    "treatMissingData": "missing",
    "notifications": {
        "onError": [
            {
                "type": "teams_message",
                "template": "cpu_warning"
            }
        ],
        "onRecovery": [
            {
                "type": "teams_message",
                "template": "cpu_recovery"
            }
        ]
    }
}