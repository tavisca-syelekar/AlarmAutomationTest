{
    "QueryConfiguration": {
        "Query": "app_name:nextgen_alarms_automation AND type:exception",
        "Index": "logs-*",
        "WindowInSeconds": 300,
        "Aggregate": {
            "Type": "count",
            "Field": "*",
            "Percents": []
        }
    },
    "Description": "Alarms automation exceptions",
    "FriendlyName": "Alarms automation exceptions",
    "Threshold": {
        "Value": 2,
        "Condition": "gte"
    }
    "Notifications": {
        "OnError": [
            {
                "Template": "business_fault_failure",
                "Type": "teams_message"
            }
        ],
        "OnRecovery": [
            {
                "Template": "business_fault_recovery",
                "Type": "teams_message"
            }
        ]
    }
}