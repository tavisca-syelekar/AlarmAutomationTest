{
   "description":"Composite memory utilization alarm for monotone",
   "friendlyName":"Composite-metric-monotone-memory-utilization",
   "threshold":{
      "condition":"gte",
      "value":70
   },
   "resourceType":"eks",
   "compositeMetric":{
      "expression":"(m1/m2)*100",
      "metrics":[
         {
            "id":"m1",
            "namespace":"containerInsights",
            "name":"pod_cpu_utilization",
            "dimensions":{
               "clusterName":"eks-travel-stage",
               "eksNamespace":"nextgen-monotone",
               "podName":"nextgen-monotone-nextgen-app-deployment"
            },
            "aggregate": {
        		"type": "Average"
      		},
            "period":"300s"
         },
         {
            "id":"m2",
            "namespace":"containerInsights",
            "name":"pod_cpu_reserved_capacity",
            "dimensions":{
               "clusterName":"eks-travel-stage",
               "eksNamespace":"nextgen-monotone",
               "podName":"nextgen-monotone-nextgen-app-deployment"
            },
            "aggregate": {
        		"type": "Average"
      		},
            "period":"300s"
         }
      ]
   },
   "evaluationPeriods": 3,
   "treatMissingData":"missing",
   "notifications":{
      "onError":[
         {
            "type":"teams_message",
            "template":"business_fault_failure"
         }
      ],
      "onRecovery":[
         {
            "type":"teams_message",
            "template":"business_fault_recovery"
         }
      ]
   }
}