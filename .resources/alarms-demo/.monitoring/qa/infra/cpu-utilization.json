{
    "description": "Nextgen-alarms POD CPU utilization",
    "friendlyName": "Nextgen-alarms POD-cpu-utilization",
    "threshold": {
        "value": 60,
        "condition": "lte"
    },
    "resourceType": "eks",
    "metric": {
        "name": "pod_cpu_utilization",
        "aggregate": {
            "type": "Average"
        },
        "period": "300s"
    },
    "evaluationPeriods": 1,
    "treatMissingData": "missing",
    "notifications": {
        "onError": [
            {
                "type": "teams_message",
                "template": "cpu_warning"
            }
        ],
        "onRecovery": [
            {
                "type": "teams_message",
                "template": "cpu_recovery"
            }
        ]
    }
}
