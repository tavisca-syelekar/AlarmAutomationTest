{
   "description":"Composite metric CPU utilization alarms and alert",
   "friendlyName":"Composite-metric-cpu-utilization",
   "threshold":{
      "condition":"gte",
      "value":70
   },
   "resourceType":"eks",
   "compositeMetric":{
      "expression":"(m1/m2)*100",
      "metrics":[
         {
            "id":"m1",
            "namespace":"ContainerInsights",
            "name":"pod_cpu_utilization",
            "aggregate": {
        		"type": "average"
      		},
            "period":"300s"
         },
         {
            "id":"m2",
            "namespace":"ContainerInsights",
            "name":"pod_cpu_reserved_capacity",
            "aggregate": {
        		"type": "average"
      		},
            "period":"300s"
         }
      ]
   },
   "evaluationPeriods": 3,
   "treatMissingData":"missing",
   "notifications":{
      "onError":[
         {
            "type":"teams_message",
            "template":"cpu_warning"
         }
      ],
      "onRecovery":[
         {
            "type":"teams_message",
            "template":"cpu_recovery"
         }
      ]
   }
}